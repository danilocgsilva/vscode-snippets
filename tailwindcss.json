	"Tailwind two columns": {
		"prefix": "tw2c",
		"body": [
		"<div class=\"flex flex-wrap\">",
		"	<div class=\"w-full md:w-1/2 p-4 bg-blue-200\">",
		"		<h2 class=\"text-xl font-bold mb-4\">Left Column</h2>",
		"		<p>This is the left column content.</p>",
		"	</div>",
		"	",
		"	<div class=\"w-full md:w-1/2 p-4 bg-green-200\">",
		"		<h2 class=\"text-xl font-bold mb-4\">Right Column</h2>",
		"		<p>This is the right column content.</p>",
		"	</div>",
		"</div>"
		],
		"description": "Two columns"
	},
	"Tailwind text input form": {
		"prefix": "twfi",
		"body": [
			"<div class=\"mt-4\">",
			"	<label for=\"exampleInput\" class=\"block text-sm font-medium text-gray-700\">Example Input</label>",
			"	<input",
			"		type=\"text\"",
			"		id=\"exampleInput\"",
			"		name=\"exampleInput\"",
			"		class=\"mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500\"",
			"		placeholder=\"Enter something...\"",
			"	/>",
			"</div>"
		],
		"description": "For input"
	},
	"Tailwind button": {
		"prefix": "twbtn",
		"body": [
			"<button",
			"	type=\"button\"",
			"	class=\"${1:w-full }inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500\"",
			">",
			"	Button",
			"</button>"
		],
		"description": "Button"
	},
	"Tailwind anchor looking like a button": {
		"prefix": "twabtn",
		"body": [
			"<a href=\"#\" class=\"inline-flex items-center px-6 py-2 bg-green-500 text-white font-semibold rounded-lg hover:bg-green-700\">",
			"	${1:Click Me!}",
			"</a>"
		],
		"description": "Anchor button"
	},
}